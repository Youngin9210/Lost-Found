<div class="container container-fluid row justify-content-center mx-auto my-3">
  <div class="col-md-5 my-3">
    <form class="login-form">
        <h4 class="text-info text-center">Login</h4>
        <div class="form-group row">
          <label for="email-login">Email:</label>
          <input class="form-control" type="email" id="email-login">
        </div>
        <div class="form-group row">
          <label for="password-login">Password:</label>
          <input class="form-control" type="password" id="password-login">
        </div>
        <div class="text-center">
          <p><a href="/signup">Sign up instead!</a></p>
          <button class="btn btn-primary" type="submit">Sign In</button>
        </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>